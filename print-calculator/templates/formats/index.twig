{% extends 'base.twig' %}

{% block content %}
<div class="container mx-auto mt-5">
    <h1 class="text-2xl font-bold mb-4">Gerenciar Formatos</h1>
    <a href="/formats/create" class="bg-blue-500 text-white px-4 py-2 rounded">Adicionar Novo Formato</a>

    <table class="min-w-full mt-5 bg-white border border-gray-300">
        <thead>
            <tr>
                <th class="py-2 px-4 border-b">ID</th>
                <th class="py-2 px-4 border-b">Nome</th>
                <th class="py-2 px-4 border-b">Ações</th>
            </tr>
        </thead>
        <tbody>
            {% for format in formats %}
            <tr>
                <td class="py-2 px-4 border-b">{{ format.id }}</td>
                <td class="py-2 px-4 border-b">{{ format.name }}</td>
                <td class="py-2 px-4 border-b">
                    <a href="/formats/edit/{{ format.id }}" class="text-yellow-500">Editar</a>
                    <form action="/formats/delete/{{ format.id }}" method="POST" class="inline">
                        <button type="submit" class="text-red-500">Excluir</button>
                    </form>
                </td>
            </tr>
            {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}