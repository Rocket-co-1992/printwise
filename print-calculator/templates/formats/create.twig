<form method="POST" action="{{ path('format_create') }}">
    <h1 class="text-2xl font-bold mb-4">Criar Novo Formato</h1>
    
    <div class="mb-4">
        <label for="name" class="block text-sm font-medium text-gray-700">Nome do Formato</label>
        <input type="text" id="name" name="name" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" placeholder="Ex: A4, A3, etc.">
    </div>

    <div class="mb-4">
        <label for="width" class="block text-sm font-medium text-gray-700">Largura (cm)</label>
        <input type="number" id="width" name="width" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" placeholder="Ex: 21">
    </div>

    <div class="mb-4">
        <label for="height" class="block text-sm font-medium text-gray-700">Altura (cm)</label>
        <input type="number" id="height" name="height" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" placeholder="Ex: 29.7">
    </div>

    <div class="mb-4">
        <label for="description" class="block text-sm font-medium text-gray-700">Descrição</label>
        <textarea id="description" name="description" class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm p-2" placeholder="Descrição do formato"></textarea>
    </div>

    <div class="mb-4">
        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">
            Criar Formato
        </button>
    </div>
</form>