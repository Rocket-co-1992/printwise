<form method="POST" action="{{ path('finishing_update', { id: finishing.id }) }}">
    <h1 class="text-2xl font-bold mb-4">Editar Acabamento</h1>
    
    <div class="mb-4">
        <label for="name" class="block text-sm font-medium text-gray-700">Nome</label>
        <input type="text" id="name" name="name" value="{{ finishing.name }}" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500">
    </div>

    <div class="mb-4">
        <label for="description" class="block text-sm font-medium text-gray-700">Descrição</label>
        <textarea id="description" name="description" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500">{{ finishing.description }}</textarea>
    </div>

    <div class="mb-4">
        <label for="price" class="block text-sm font-medium text-gray-700">Preço</label>
        <input type="number" id="price" name="price" value="{{ finishing.price }}" required class="mt-1 block w-full border border-gray-300 rounded-md shadow-sm focus:ring focus:ring-blue-500">
    </div>

    <div class="flex items-center justify-between">
        <a href="{{ path('finishing_index') }}" class="text-sm text-gray-600 hover:text-gray-900">Cancelar</a>
        <button type="submit" class="inline-flex justify-center py-2 px-4 border border-transparent rounded-md shadow-sm text-sm font-medium text-white bg-blue-600 hover:bg-blue-700 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-blue-500">Salvar</button>
    </div>
</form>